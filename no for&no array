#include <iostream>
using namespace std;
int main() {
    long int a, b=0 ,sum=0;
    cout <<"請輸入多科成績，輸入0表示停止: \n";
    cin >> a;
    while(a != 0){
        sum = sum + a ;
        cin >> a;
        b += 1;
    }
    cout <<"總分為:" << sum << "\n"; 
    cout <<"平均為:" << sum / b;
    if(sum/b >= 60){
        cout <<"成績及格\n";
    }
    else{
        cout <<"成績不及格\n";
    }
  }
